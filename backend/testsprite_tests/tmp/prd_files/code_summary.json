{
  "project_name": "DATOM - Decentralized Task Outsourcing Marketplace",
  "project_type": "full-stack",
  "description": "A blockchain-based task outsourcing platform where clients post tasks with escrow payments, freelancers submit completed work with zero-knowledge proof validation, and payments are released proportionally based on approved deliverables.",
  "tech_stack": {
    "frontend": {
      "framework": "React 19.0.0",
      "build_tool": "Create React App with CRACO",
      "ui_library": "Radix UI + shadcn/ui components",
      "styling": "TailwindCSS 3.4.17",
      "state_management": "React Hooks (useState, useEffect)",
      "routing": "React Router DOM 7.5.1",
      "blockchain": "ethers.js 6.15.0",
      "authentication": "Firebase Auth 12.4.0",
      "http_client": "axios 1.8.4",
      "form_handling": "react-hook-form 7.56.2 + zod 3.24.4",
      "icons": "lucide-react 0.507.0"
    },
    "backend": {
      "framework": "FastAPI 0.110.1",
      "server": "Uvicorn 0.25.0",
      "authentication": "Firebase Admin SDK 6.5.0",
      "blockchain": "web3.py 6.0.0 + eth-account 0.8.0",
      "cryptography": "Custom ZKP system with Pedersen Commitments",
      "email": "aiosmtplib 3.0.0",
      "password_hashing": "bcrypt 4.0.1 + passlib 1.7.4",
      "validation": "pydantic 2.6.4",
      "jwt": "pyjwt 2.10.1 + python-jose 3.3.0"
    },
    "blockchain": {
      "network": "Ethereum (configurable via env)",
      "smart_contracts": "Solidity escrow contracts",
      "test_network": "Anvil (Foundry)",
      "wallet": "MetaMask integration"
    },
    "database": {
      "primary": "Firebase Firestore",
      "collections": ["users", "tasks", "submissions", "escrow_transactions", "payment_claims"]
    }
  },
  "core_features": [
    {
      "name": "User Authentication & Authorization",
      "description": "Firebase-based authentication with role-based access (client/freelancer)",
      "endpoints": [
        "POST /api/auth/register",
        "POST /api/auth/login",
        "POST /api/auth/forgot-password",
        "POST /api/auth/reset-password",
        "GET /api/auth/me"
      ]
    },
    {
      "name": "Task Management",
      "description": "Create, browse, and manage tasks with escrow integration",
      "endpoints": [
        "POST /api/tasks",
        "GET /api/tasks",
        "GET /api/tasks/{task_id}",
        "GET /api/tasks/my-tasks",
        "PUT /api/tasks/{task_id}",
        "DELETE /api/tasks/{task_id}"
      ]
    },
    {
      "name": "Submission System",
      "description": "Freelancers submit completed work with file uploads",
      "endpoints": [
        "POST /api/submissions",
        "GET /api/submissions/my-submissions",
        "GET /api/submissions/task/{task_id}",
        "GET /api/submissions/{submission_id}",
        "GET /api/tasks/{task_id}/can-submit"
      ]
    },
    {
      "name": "Partial Approval System",
      "description": "Clients approve/reject individual files with proportional payment calculation",
      "endpoints": [
        "PUT /api/submissions/{submission_id}/files/{file_id}/approve",
        "PUT /api/submissions/{submission_id}/files/{file_id}/reject",
        "GET /api/submissions/{submission_id}/approval-summary"
      ]
    },
    {
      "name": "Zero-Knowledge Proof (ZKP) Validation",
      "description": "Cryptographic proof system using Pedersen Commitments for file validation without revealing content",
      "endpoints": [
        "POST /api/zkp/generate-proof",
        "POST /api/zkp/verify-proof"
      ],
      "features": [
        "File size validation (range proofs)",
        "Filename substring validation",
        "Automatic approval based on cryptographic verification"
      ]
    },
    {
      "name": "Payment & Escrow Management",
      "description": "Blockchain-based escrow with proportional payment release",
      "endpoints": [
        "POST /api/payments/claim",
        "GET /api/payments/my-claims",
        "GET /api/submissions/{submission_id}/payment-status"
      ],
      "features": [
        "Real ETH transfers via web3",
        "Proportional payment based on approved files",
        "Transaction hash tracking",
        "Balance verification"
      ]
    },
    {
      "name": "File Management",
      "description": "Secure file upload, storage, and download with validation",
      "endpoints": [
        "POST /api/upload (via FormData)",
        "GET /api/files/{file_path}"
      ],
      "constraints": [
        "Max file size: 50MB",
        "Allowed types: pdf, doc, docx, txt, zip, rar, jpg, jpeg, png, gif, mp4, mov, avi"
      ]
    },
    {
      "name": "Email Notifications",
      "description": "SMTP-based email service for password reset and notifications",
      "features": [
        "Password reset emails",
        "Task submission notifications",
        "Payment claim confirmations"
      ]
    }
  ],
  "frontend_pages": [
    {
      "route": "/",
      "name": "Home/Browse Tasks",
      "description": "Browse available tasks with search and filtering"
    },
    {
      "route": "/my-tasks",
      "name": "My Tasks",
      "description": "Client's posted tasks with submission management"
    },
    {
      "route": "/my-submissions",
      "name": "My Submissions",
      "description": "Freelancer's submitted work with status tracking"
    },
    {
      "route": "/login",
      "name": "Login",
      "description": "Firebase authentication login page"
    },
    {
      "route": "/register",
      "name": "Register",
      "description": "User registration with role selection"
    },
    {
      "route": "/forgot-password",
      "name": "Forgot Password",
      "description": "Password reset request"
    }
  ],
  "key_components": [
    "TaskCard - Display task information with action buttons",
    "SubmissionModal - File upload and submission form",
    "TaskSubmissions - Client review interface with file approval",
    "MySubmissions - Freelancer submission dashboard",
    "PaymentClaimModal - Wallet integration for payment claims",
    "FirebaseAuth - Authentication wrapper",
    "LoadingSpinner - Loading state indicator"
  ],
  "security_features": [
    "Firebase JWT token authentication",
    "Role-based access control (RBAC)",
    "Input validation with Pydantic",
    "File type and size validation",
    "CORS middleware",
    "Password hashing with bcrypt",
    "Secure file storage",
    "Transaction signing and verification",
    "Zero-knowledge proofs for privacy"
  ],
  "known_issues": [
    "Google OAuth client secret configuration needed",
    "Email service requires SMTP credentials",
    "Blockchain network configuration varies by environment",
    "File access permissions may need adjustment"
  ],
  "testing_priorities": [
    "Authentication flow (register, login, password reset)",
    "Task creation and management",
    "File upload and submission process",
    "Partial approval workflow",
    "Payment claim and blockchain integration",
    "ZKP proof generation and verification",
    "API endpoint authorization",
    "File download and access control",
    "Error handling and validation",
    "Cross-browser compatibility"
  ],
  "environment_variables": {
    "frontend": [
      "REACT_APP_BACKEND_URL",
      "REACT_APP_ESCROW_ADDRESS",
      "REACT_APP_NETWORK_NAME",
      "REACT_APP_RPC_URL",
      "REACT_APP_CHAIN_ID",
      "REACT_APP_CHAIN_ID_HEX",
      "REACT_APP_CURRENCY_SYMBOL",
      "REACT_APP_FIREBASE_API_KEY",
      "REACT_APP_FIREBASE_AUTH_DOMAIN",
      "REACT_APP_FIREBASE_PROJECT_ID"
    ],
    "backend": [
      "SECRET_KEY",
      "FIREBASE_SERVICE_ACCOUNT_KEY_PATH",
      "SMTP_USERNAME",
      "SMTP_PASSWORD",
      "SMTP_SERVER",
      "SMTP_PORT",
      "WEB3_PROVIDER_URL",
      "ESCROW_PRIVATE_KEY"
    ]
  }
}
